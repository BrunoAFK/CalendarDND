    <string name="help_item_automation_title">Automatic DND</string>
    <string name="help_item_automation_summary">Automatically turns DND on and off based on your calendar.</string>
    <string name="help_item_automation_details">When enabled, the app reads your calendar, detects active meetings, and applies DND during those times. It will only turn DND off if it previously turned it on.</string>

    <string name="help_item_permissions_title">Permissions</string>
    <string name="help_item_permissions_summary">Calendar + DND access are required to automate.</string>
    <string name="help_item_permissions_details">Calendar permission lets the app read events. DND access lets it set Do Not Disturb. Notification permission enables reminders.</string>
    <string name="unable_to_open_link">Unable to open link.</string>

    <string name="help_item_language_title">Language</string>
    <string name="help_item_language_summary">Pick the app language in Settings.</string>
    <string name="help_item_language_details">You can change language from Settings. It updates the app UI right away and does not change your device language.</string>

    <string name="help_item_privacy_title">Privacy</string>
    <string name="help_item_privacy_summary">Control analytics and crash/performance reports.</string>
    <string name="help_item_privacy_details">You can enable or disable usage analytics and crash/performance reports. Analytics is off by default. Crash reports help fix bugs; performance reports track app stability.</string>

    <string name="help_item_updates_title">Updates</string>
    <string name="help_item_updates_summary">Manual updates are delivered from GitHub releases.</string>
    <string name="help_item_updates_details">On the manual build, the app checks the GitHub release feed. When a new version is available, you will see a prompt and can download and install the APK.</string>

    <string name="help_item_exact_alarms_title">Exact Alarms</string>
    <string name="help_item_exact_alarms_summary">Improves timing reliability on newer Android versions.</string>
    <string name="help_item_exact_alarms_details">If exact alarms are allowed, the app schedules precise start and end times. If not, it falls back to guards and periodic checks.</string>

    <string name="help_item_battery_title">Battery Optimization</string>
    <string name="help_item_battery_summary">Disabling it helps alarms and workers run on time.</string>
    <string name="help_item_battery_details">Some devices delay background work. If you see late DND changes, disable battery optimization for Calendar DND.</string>

    <string name="help_item_busy_only_title">Busy Events Only</string>
    <string name="help_item_busy_only_summary">Ignore events marked as Free or Tentative.</string>
    <string name="help_item_busy_only_details">When enabled, only Busy events can trigger DND. This avoids silencing during optional or informational events.</string>

    <string name="help_item_ignore_all_day_title">Ignore All-Day Events</string>
    <string name="help_item_ignore_all_day_summary">Prevents all-day events from triggering DND.</string>
    <string name="help_item_ignore_all_day_details">All-day events often represent reminders or holidays. This keeps DND from staying on all day.</string>

    <string name="help_item_min_duration_title">Minimum Event Duration</string>
    <string name="help_item_min_duration_summary">Filters out short events.</string>
    <string name="help_item_min_duration_details">Events shorter than this value will be ignored. This reduces unwanted toggles from quick calendar entries.</string>

    <string name="help_item_dnd_mode_title">DND Mode</string>
    <string name="help_item_dnd_mode_summary">Choose Priority Only or Total Silence.</string>
    <string name="help_item_dnd_mode_details">Priority Only allows starred contacts and priority notifications. Total Silence blocks all sounds, including alarms.</string>

    <string name="help_item_dnd_timing_title">DND Timing</string>
    <string name="help_item_dnd_timing_summary">Start DND before or after the meeting begins.</string>
    <string name="help_item_dnd_timing_details">Use the slider to shift when DND starts. Negative values start early, positive values start late, and 0 starts exactly at meeting time.</string>

    <string name="help_item_pre_dnd_notification_title">Pre-DND Notification</string>
    <string name="help_item_pre_dnd_notification_summary">Optional reminder 5 minutes before DND starts.</string>
    <string name="help_item_pre_dnd_notification_details">When enabled, the app shows a reminder shortly before DND starts and lets you enable DND immediately.</string>

    <string name="help_item_tile_title">Quick Settings Tile</string>
    <string name="help_item_tile_summary">Toggle automatic DND from the shade.</string>
    <string name="help_item_tile_details">Add the tile to Quick Settings for one-tap enable/disable. If setup is missing, the tile opens the app.</string>

    <string name="help_item_debug_logs_title">Debug Logs</string>
    <string name="help_item_debug_logs_summary">Shows engine decisions and scheduling.</string>
    <string name="help_item_debug_logs_details">Use logs to confirm timing and troubleshoot. You can copy logs to share when reporting issues; the header includes key settings.</string>

    <string name="help_item_pull_refresh_title">Pull to Refresh</string>
    <string name="help_item_pull_refresh_summary">Swipe down on the main screen to refresh status.</string>
    <string name="help_item_pull_refresh_details">Pull down on the home screen to manually refresh your meeting status and re-check the DND state. This is useful if your calendar has changed recently and you want to see the updated status immediately.</string>

